@{
    ViewBag.Title = "Home Page";
}

<div ng-app="weather-board">
    
    <div class="jumbotron">
        <h1>The Weather Service!</h1>
        <p class="lead">Everywhere you go, always take the weather with you!</p>
    </div>

    <div class="row" ng-controller="weatherController">
        <table class="table table-hover table-responsive table-striped">
            <tr>
                <td>Country</td>
                <td ng-bind="data.country"></td>
            </tr>
            <tr>
                <td>City</td>
                <td ng-bind="data.city"></td>
            </tr>
            <tr>
                <td>Location</td>
                <td ng-bind="data.location"></td>
            </tr>
            <tr>
                <td>Time</td>
                <td ng-bind="data.time"></td>
            </tr>
            <tr>
                <td>Wind</td>
                <td ng-bind="data.wind"></td>
            </tr>
            <tr>
                <td>Visibility</td>
                <td ng-bind="data.visibility"></td>
            </tr>
            <tr>
                <td>Sky</td>
                <td ng-bind="data.sky"></td>
            </tr>
            <tr>
                <td>Humidity</td>
                <td ng-bind="data.humidity"></td>
            </tr>
            <tr>
                <td>Pressure</td>
                <td ng-bind="data.pressure"></td>
            </tr>
            <tr>
                <td>Temperature</td>
                <td ng-bind="data.temperature"></td>
            </tr>
        </table>
    </div>

</div>

